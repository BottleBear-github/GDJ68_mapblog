<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.gdj68.mapblog.notice.noticeDAO">
  	<select id="getTotal" resultType="Long">
  		SELECT COUNT(NOTICENUM) FROM NOTICE
  	</select>
  	<select id="getList" parameterType="Pager" resultType="NoticeDTO">
  		SELECT *
	FROM(
		SELECT ROWNUM R, B.* 
			FROM(SELECT * 
				 FROM NOTICE	
				) B
				)
			WHERE
				R BETWEEN #{startRow} AND #{lastRow}
  	</select>
  	
  	<insert id="setAdd" parameterType="noticeDTO">
  		INSERT INTO NOTICE(NOTICENUM,ADMINID,SUBJECT,CONTENTS,NOTICEDATE) VALUES(NOTICE_SEQ.NEXTVAL,#{adminId},#{subject},#{contents},SYSDATE)
  	</insert>
  </mapper>