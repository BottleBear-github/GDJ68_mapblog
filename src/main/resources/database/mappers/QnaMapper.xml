<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

  <mapper namespace="com.gdj68.mapblog.qna.QnaDAO">
  	<select id="getTotal" resultType="Long">
  		SELECT COUNT(QNANUM) FROM QNA
  	</select>
  	
  	<select id="getList" parameterType="Pager" resultType="QnaDTO">
  		SELECT *
	FROM(
		SELECT ROWNUM R, B.* 
			FROM(SELECT * 
				 FROM QNA	
				) B
				)
			WHERE
				R BETWEEN #{startRow} AND #{lastRow}
  	</select>
  	
  	<insert id="setAdd" parameterType="QnaDTO">
  		INSERT INTO QNA(QNANUM,MEMBERID,QNATITLE,QNACONTENTS,QNADATE) VALUES(#{qnaNum},#{memberId},#{qnaTitle},#{qnaContents},SYSDATE)
  	</insert>
  </mapper>